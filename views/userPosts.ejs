<% include header.ejs %>
<% include nav.ejs %>
<div class="ui container">
    <h1><%= users[0].username %>'s Posts</h1>
    <div class="ui masonry grid">
        <% for(var i = 0; i < posts.length; i++){ %>
        <div class="column">
            <div class="ui fluid card">
                <div class="image">
                    <image src="<%= posts[i].image %>" onError="this.onerror=null; this.src='error.png'">
                </div>
                <div class="content">
                    <p><%= posts[i].comment %></p>
                    <p>by <%= posts[i].username %></p>
                </div>
                <% if(authenticated){ %>
                    <div class="extra content">
                        <div class="likes ui basic red"><%= posts[i].likedUsers.length %> Likes </div>
                        <% if(posts[i].liked === false){ %>
                            <a class="ui basic button red liked" id="<%= posts[i]._id %>">Like</a>
                        <% }else{ %>
                            <a class="ui basic button red liked unlike" id="<%= posts[i]._id %>"><span>Liked</span></a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $('.liked').click(function(){
            $.ajax({
                url: '/user',
                type: 'POST',
                data:{
                    post: $(this).attr("id")
                },
                success: function(){
                    location.reload();
                }
            });
            location.reload();
            location.reload();
        })
    });
</script>